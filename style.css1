body {
  background: #111;
  color: #fff;
  font-family: Arial;
  text-align: center;
}

#addons {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
  gap: 20px;
  padding: 20px;
}

.card {
  background: #1c1c1c;
  padding: 15px;
  border-radius: 10px;
}

.card img {
  width: 100%;
  border-radius: 5px;
}
